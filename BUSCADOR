<body>
  <h2>Tabla filtrable de 7 columnas (ejemplo de formato de datos)</h2>

  <table>
    <thead>
      <tr>
        <th><input placeholder="Marca" oninput="updateFilter(0,this.value)"></th>
        <th><input placeholder="Modelo" oninput="updateFilter(1,this.value)"></th>
        <th><input placeholder="Caballos" oninput="updateFilter(2,this.value)"></th>
        <th><input placeholder="Potencia (kW)" oninput="updateFilter(3,this.value)"></th>
        <th><input placeholder="Año" oninput="updateFilter(4,this.value)"></th>
        <th><input placeholder="País" oninput="updateFilter(5,this.value)"></th>
        <th><input placeholder="Descripción" oninput="updateFilter(6,this.value)"></th>
      </tr>
      <tr>
        <th>Marca</th><th>Modelo</th><th>Caballos</th><th>Potencia (kW)</th>
        <th>Año</th><th>País</th><th>Descripción</th>
      </tr>
    </thead>
    <tbody id="tabla"></tbody>
  </table>

  <script>
    // 🔽 Inserta tus registros aquí. Cada fila = [Marca, Modelo, Caballos, kW, Año, País, Descripción]
    const data = [
      ["Audi","A3 35 TFSI","150","110","2020","Alemania","Compacto premium eficiente, ideal para ciudad."],
      ["BMW","320i","184","135","2019","Alemania","Berlina equilibrada, buen consumo en autopista."],
