<body>
  <h2>Tabla filtrable con escritura + desplegable y resaltado</h2>
  <div class="meta">Escribe para ver sugerencias (mÃ¡x. 50 por columna). Los filtros se combinan.</div>

  <table>
    <thead>
      <tr>
        <th>
          <input id="f0" list="dl0" placeholder="Marca" oninput="handleType(0,this)">
          <datalist id="dl0"></datalist>
        </th>
        <th>
          <input id="f1" list="dl1" placeholder="Modelo" oninput="handleType(1,this)">
          <datalist id="dl1"></datalist>
        </th>
        <th>
          <input id="f2" list="dl2" placeholder="Caballos" oninput="handleType(2,this)">
          <datalist id="dl2"></datalist>
        </th>
        <th>
          <input id="f3" list="dl3" placeholder="Potencia (kW)" oninput="handleType(3,this)">
          <datalist id="dl3"></datalist>
        </th>
        <th>
          <input id="f4" list="dl4" placeholder="AÃ±o" oninput="handleType(4,this)">
          <datalist id="dl4"></datalist>
        </th>
        <th>
          <input id="f5" list="dl5" placeholder="PaÃ­s" oninput="handleType(5,this)">
          <datalist id="dl5"></datalist>
        </th>
        <th>
          <input id="f6" list="dl6" placeholder="DescripciÃ³n" oninput="handleType(6,this)">
          <datalist id="dl6"></datalist>
        </th>
      </tr>
      <tr>
        <th>Marca</th><th>Modelo</th><th>Caballos</th><th>Potencia (kW)</th>
        <th>AÃ±o</th><th>PaÃ­s</th><th>DescripciÃ³n</th>
      </tr>
    </thead>
    <tbody id="tbody"></tbody>
  </table>

  <div class="status" id="status"></div>

  <script>
    /* ==== PEGA AQUÃ TUS 23.000 FILAS ====
       Cada fila: [Marca, Modelo, Caballos, kW, AÃ±o, PaÃ­s, DescripciÃ³n] */
    const data = [
      ["Audi","A3 35 TFSI","150","110","2020","Alemania","Compacto premium eficiente, ideal para ciudad"],
      ["BMW","320i","184","135","2019","Alemania","Berlina equilibrada, buen consumo en autopista"],
      ["Mercedes","C200","163","120","2021","Alemania","Confort alto y ayudas a la conducciÃ³n"],
      ["Volkswagen","Golf 1.5 TSI","130","96","2018","Alemania","ClÃ¡sico compacto con buen maletero"],
      ["Ford","Focus 1.0 EcoBoost","125","92","2022","EE. UU.","DinÃ¡mico, buen chasis y conectividad"],
      ["Renault","MÃ©gane TCe","140","103","2020","Francia","RelaciÃ³n calidad-precio muy sÃ³lida"],
      ["Peugeot","308 PureTech","130","96","2019","Francia","Interior moderno i-Cockpit"],
      ["Toyota","Corolla Hybrid","122","90","2021","JapÃ³n","HÃ­brido fiable, consumo muy bajo"],
      ["SEAT","LeÃ³n 1.5 TSI","150","110","2020","EspaÃ±a","Equilibrio entre deportividad y confort"],
      ["Honda","Civic VTEC","182","134","2019","JapÃ³n","Motor elÃ¡stico y buen espacio trasero"],
      ["Opel","Astra 1.2","145","107","2021","Alemania","Compacto cÃ³modo para largos viajes"],
      ["Fiat","Tipo 1.4","95","70","2018","Italia","EconÃ³mico en mantenimiento y seguro"],
      ["Å koda","Octavia 1.5 TSI","150","110","2020","Chequia","Muy espacioso, maletero enorme"],
      ["Hyundai","i30 1.0 T-GDi","120","88","2022","Corea","GarantÃ­a larga y equipamiento completo"],
      ["Kia","Ceed 1.4 T-GDi","140","103","2021","Corea","Buena dotaciÃ³n tecnolÃ³gica de serie"],
      ["CitroÃ«n","C4 PureTech","130","96","2020","Francia","SuspensiÃ³n confortable, diseÃ±o distintivo"],
      ["Volvo","S60 T4","190","140","2019","Suecia","Seguridad lÃ­der y buen aislamiento"],
      ["Mini","Cooper 1.5","136","100","2021","Reino Unido","Estilo icÃ³nico y manejo Ã¡gil"],
      ["Alfa Romeo","Giulia 2.0","200","147","2018","Italia","TracciÃ³n trasera y tacto deportivo"],
      ["Tesla","Model 3 SR+","300","220","2022","EE. UU.","ElÃ©ctrico con gran aceleraciÃ³n y OTA"],
      ["Mazda","3 Skyactiv-G","150","110","2020","JapÃ³n","AtmosfÃ©rico suave, acabados premium"],
      ["Nissan","Qashqai 1.3","140","103","2021","JapÃ³n","SUV compacto, asientos cÃ³modos"],
      ["Dacia","Duster TCe","130","96","2022","RumanÃ­a","SUV asequible, buen 4x2"],
      ["Subaru","Impreza","156","115","2019","JapÃ³n","TracciÃ³n integral y seguridad activa"],
      ["Jaguar","XE 2.0T","250","184","2018","Reino Unido","Berlina deportiva, chasis preciso"],
      ["Porsche","Macan 2.0T","265","195","2021","Alemania","SUV premium con dinÃ¡mica excelente"],
      ["Cupra","Formentor 1.5","150","110","2022","EspaÃ±a","Crossover deportivo con buena puesta a punto"],
      ["Peugeot","3008 Hybrid","225","165","2021","Francia","HÃ­brido enchufable, interior top"],
      ["Renault","Clio TCe","100","74","2020","Francia","Urbano con buen equipamiento de seguridad"],
      ["Hyundai","Tucson 1.6","150","110","2021","Corea","SUV con diseÃ±o llamativo y mucho equipamiento"]
    ];

    // âš™ï¸ Configurables
    const MAX_SUGGESTIONS = 50; // opciones mÃ¡x por datalist
    const MAX_RENDER = 500;     // filas mÃ¡x que se pintan (fluidez)

    // Estado
    const inputs = [...document.querySelectorAll('thead input')];
    const filters = Array(7).fill('');
    const tbody = document.getElementById('tbody');
    const statusEl = document.getElementById('status');

    // Uniques por columna para sugerencias
    const uniques = Array.from({length:7}, ()=> new Set());
    for (const row of data) for (let c=0;c<7;c++) uniques[c].add(String(row[c]));
    const uniqueLists = uniques.map(s => Array.from(s).sort());

    // Debounce
    let tId;
    const debounce = (fn, ms=120) => { clearTimeout(tId); tId = setTimeout(fn, ms); };

    // Helpers de marcado seguro
    const escapeHtml = (s) => String(s)
      .replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;')
      .replace(/"/g,'&quot;').replace(/'/g,'&#039;');

    const escapeRegex = (s) => s.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');

    // Devuelve HTML con <mark> alrededor de coincidencias (case-insensitive)
    function highlight(text, needle){
      if (!needle) return escapeHtml(text);
      const re = new RegExp(`(${escapeRegex(needle)})`, 'ig');
      return escapeHtml(text).replace(re, '<mark>$1</mark>');
    }

    function handleType(colIndex, el){
      const val = (el.value || '').trim();
      filters[colIndex] = val.toLowerCase();

      // estilo activo/inactivo del input
      if (val) el.classList.add('active'); else el.classList.remove('active');

      // actualizar sugerencias
      updateDatalist(colIndex, val);

      // pintar
      debounce(renderTable);
    }

    function updateDatalist(colIndex, typed){
      const dl = document.getElementById('dl'+colIndex);
      dl.innerHTML = '';
      if (!typed) return;
      const t = typed.toLowerCase();
      let count = 0;
      for (const v of uniqueLists[colIndex]) {
        if (v.toLowerCase().includes(t)) {
          const opt = document.createElement('option');
          opt.value = v;
          dl.appendChild(opt);
          if (++count >= MAX_SUGGESTIONS) break;
        }
      }
    }

    function rowMatches(row){
      for (let i=0;i<7;i++){
        const f = filters[i];
        if (f && !String(row[i]).toLowerCase().includes(f)) return false;
      }
      return true;
    }

    function renderTable(){
      const frag = document.createDocumentFragment();
      let shown = 0, matched = 0;
      for (const row of data) {
        if (!rowMatches(row)) continue;
        matched++;
        if (shown < MAX_RENDER){
          const tr = document.createElement('tr');
          for (let c=0;c<7;c++){
            const td = document.createElement('td');
            td.innerHTML = highlight(row[c], filters[c]);
            tr.appendChild(td);
          }
          frag.appendChild(tr);
          shown++;
        }
      }
      tbody.innerHTML = '';
      tbody.appendChild(frag);
      statusEl.textContent = `Coincidencias: ${matched.toLocaleString()} â€” Mostrando: ${shown.toLocaleString()}${matched>shown?' (limitado para fluidez)':''}`;
    }

    // inicial
    renderTable();

    // tambiÃ©n marcar activo cuando seleccionas del datalist (evento change)
    inputs.forEach((inp, i)=>{
      inp.addEventListener('change', e => handleType(i, e.target));
    });
  </script>
</body>
